---
- name: Add node
  gather_facts: False
  become: true
  vars:
    kube_api_server: 172.31.44.221
    token: ChangeMe
    disc_token: ChangeMe
  hosts: worker
  tasks:
    - name: join k8-cluster
      shell:
        cmd: kubeadm join {{ kube_api_server }}:6443 --token {{ token }} --discovery-token-ca-cert-hash {{ disc_token }}

